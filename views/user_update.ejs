<link rel="stylesheet" href="<%= assetPath('css/user_update.css') %>">
<div id="image-content">
    <img id="profile-user-avatar" src="<%= profile_user.avatar %>" alt="Type not eligible">
    <label id="label1" for="avatar">
        <div id="post-form-image-container">
            <i class="far fa-image"></i>
        </div>
    </label>
</div>
<div id="inputbox">
    <form action="/users/update/<%= profile_user.id %>" method="POST" enctype="multipart/form-data">
        <input id="email" type="email" placeholder="Email address or phone number" name="email"
            value="<%= profile_user.email %>" required>
        <input id="name" type="name" placeholder="Full Name" name="name" value="<%= profile_user.name %>" required>
        <button type="button" id="chngpass">Change Password</button>
        <input id="cpassword" type="password" placeholder="Current Password" value="<%= profile_user.password %>"
            name="cpassword" style="display: none;">
        <input id="password" type="password" placeholder="New Password" name="password" style="display: none;">
        <input id="avatar" type="file" name="avatar" placeholder="Profile Picture"
            accept="image/jpg, image/jpeg, image/png" onchange="readURL(this);" style="display: none;">
        <button id="submit" type="submit">Update Profile</button>
    </form>
</div>




<script src="<%= assetPath('js/user_update.js') %>"></script>